{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "studio.html", "use": "@vercel/static" },
    { "src": "signin.html", "use": "@vercel/static" },
    { "src": "styles.css", "use": "@vercel/static" },
    { "src": "app.js", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/story", "dest": "/api/story.js" },
    { "src": "/api/tts", "dest": "/api/tts.js" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/studio", "dest": "/studio.html" },
    { "src": "/signin", "dest": "/signin.html" }
  ]
}


